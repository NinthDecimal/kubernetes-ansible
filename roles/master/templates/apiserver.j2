###
# kubernetes system config
#
# The following values are used to configure the kubernetes-apiserver
#

# The address on the local server to listen to.
KUBE_API_ADDRESS="--address=0.0.0.0"

# The port on the local server to listen on.
KUBE_API_PORT="--port=8080"

# Disable secure port
KUBE_SECURE_PORT="--secure_port=0"

# How the replication controller and scheduler find the apiserver
KUBE_MASTER="--master=http://{{ groups['masters'][0] }}:8080"

# Comma seperated list of minions
KUBELET_ADDRESSES="--machines={{ groups['minions']|join(',') }}"

# Port minions listen on
KUBELET_PORT="--kubelet_port=10250"

# Address range to use for services
KUBE_SERVICE_ADDRESSES="--portal_net={{ kube_service_addresses }}"

# Comma seperated list of nodes in the etcd cluster
KUBE_ETCD_SERVERS="--etcd_servers=http://{{ groups['etcd'][0] }}:4001"

# Add you own!
KUBE_API_ARGS=""

OPTIONS="$KUBE_ETCD_SERVERS $KUBE_API_ADDRESS $KUBE_API_PORT $KUBE_SECURE_PORT $KUBELET_PORT $KUBE_SERVICE_ADDRESSES $KUBE_API_ARGS"
